<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@color/white"
    tools:context=".CongratsBottomSheet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/yeonsung_regular"
            android:text="Xin chúc mừng\n bạn đã đặt hàng thành công"
            android:textAlignment="center"
            android:textColor="@color/greenCollor"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="172dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/congratulation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gohomeshape"
            android:textAllCaps="false"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/yeonsung_regular"
            android:background="@drawable/gohomeshape"
            android:text="Về trang chủ" />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>